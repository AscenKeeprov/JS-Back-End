<h1>Attach a new accessory</h1>
<div class="form">
	<h2>{{cube.name}}</h2>
	<img class="cube" src="{{cube.imageUrl}}">
	{{#if accessories}}
	<form action='/accessories/attach/{{cube._id}}' method="post">
		<label for="accessory">Accessories</label>
		<select id="accessory" name="accessoryId" required>
			<option value="">Select an accessory...</option>
			{{#each accessories }}
			<option value="{{this._id}}">{{this.name}}</option>
			{{/each}}
		</select>
		<input type="submit" value="Attach">
	</form>
	{{else}}
	<h3 class="italic">This cube either has all available accessories or there are none available at the moment.</h3>
	{{/if}}
	<a class="btn" href="/cubes/details/{{cube._id}}">Back</a>
</div>