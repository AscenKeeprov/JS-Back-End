<h1>Create</h1>
<div class="form">
	<form action='/cubes/create' method="post">
		<label for="name">Name</label>
		<input id="name" name="name" type="text" value="{{name}}">
		<label for="description">Description</label>
		<textarea id="description" name="description">{{description}}</textarea>
		<label for="image">Image URL</label>
		<input id="image" name="imageUrl" type="text" value="{{imageUrl}}">
		<label for="difficulty">Difficulty</label>
		<select id="difficulty" name="difficulty">
			<option value="0">Select difficulty...</option>
			<option value="1">1 - Very Easy</option>
			<option value="2">2 - Easy</option>
			<option value="3">3 - Medium (Standard 3x3)</option>
			<option value="4">4 - Intermediate</option>
			<option value="5">5 - Expert</option>
			<option value="6">6 - Hardcore</option>
		</select>
		<input type="submit" value="Create">
	</form>
</div>